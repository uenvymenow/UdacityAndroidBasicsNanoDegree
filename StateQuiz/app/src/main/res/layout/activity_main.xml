<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Question 1 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question1" />

                <RadioButton
                    android:id="@+id/question1CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question1RadioButton"
                    android:text="@string/question1correct" />
            </RadioGroup>

            <!-- Question 2 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question2" />

                <RadioButton
                    android:id="@+id/question2CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question2RadioButton"
                    android:text="@string/question2correct" />
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question3" />

            <EditText
                android:id="@+id/question3Answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@string/question3Hint" />
            <!-- End Question 3 -->

            <!-- Question 4 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question4" />

                <RadioButton
                    android:id="@+id/question4CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question4RadioButton"
                    android:text="@string/question4correct" />
            </RadioGroup>

            <!-- Question 5 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question5" />

                <RadioButton
                    android:id="@+id/question5CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question5RadioButton"
                    android:text="@string/question5correct" />
            </RadioGroup>

            <!-- Question 6 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6" />

                <RadioButton
                    android:id="@+id/question6CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question6RadioButton"
                    android:text="@string/question6correct" />

            </RadioGroup>

            <!-- Question 7 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question7" />

                <RadioButton
                    android:id="@+id/question7CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question7RadioButton"
                    android:text="@string/question7correct" />
            </RadioGroup>

            <!-- Question 8 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question8" />

                <RadioButton
                    android:id="@+id/question8CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="question8RadioButton"
                    android:text="@string/question8correct" />

            </RadioGroup>

            <!-- Question 9 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9" />
            <CheckBox android:id="@+id/question9CorrectOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9correct1"
                android:onClick="question9CB"/>

            <CheckBox android:id="@+id/question9CorrectTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/question9correct2"
                android:onClick="question9CB"/>

            <!-- Question 10 -->
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question10" />

                <RadioButton
                    android:id="@+id/question10CorrectAnswer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question10correct"
                    android:onClick="question10RadioButton"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitButton"
                android:text="Submit" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="resetButton"
                android:text="Reset"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>